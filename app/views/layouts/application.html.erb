<!DOCTYPE html>
<html>
  <head>
    <title>SafeNotes</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script>
      <% if current_user %>
        window.currentUser = <%= render("api/users/user.json.jbuilder", 
                                 user: current_user).html_safe %>
      <% end %>
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
